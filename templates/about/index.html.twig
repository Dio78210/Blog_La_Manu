{% extends 'base.html.twig' %}

{% block title %}About index{% endblock %}

{% block body %}
    <h1>A Propos</h1>

<div class="flex mb-10">
    <a class="btn" href="{{ path('app_about_new') }}">Creer nouveau</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Title</th>
                <th>Content</th>
                <th>ImageURL</th>
                {# <th>UpdatedAt</th> #}
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                {# <td>{{ about.id }}</td> #}
                <td>{{ about.title }}</td>
                <td>{{ about.content | raw }}</td>
                <td>{{ about.imageURL }}</td>
                {# <td>{{ about.updatedAt ? about.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ about.createdAt ? about.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="flex">
                        <a href="{{ path('app_about_show', {'id': about.id}) }}" class="btn">voir</a>
                        <a href="{{ path('app_about_edit', {'id': about.id}) }}" class="btn">editer</a>

                        {{include('about/_delete_form.html.twig')}}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
