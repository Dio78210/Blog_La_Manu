{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
    <h1>About</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ about.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ about.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ about.content }}</td>
            </tr>
            <tr>
                <th>ImageURL</th>
                <td>{{ about.imageURL }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ about.updatedAt ? about.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ about.createdAt ? about.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_about_index') }}">back to list</a>

    <a href="{{ path('app_about_edit', {'id': about.id}) }}">edit</a>

    {{ include('about/_delete_form.html.twig') }}
{% endblock %}
